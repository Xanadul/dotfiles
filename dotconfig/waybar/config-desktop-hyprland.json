  // Modules
  "hyprland/window": {
    "max-length": 200,
    "separate-outputs": true,
    "format": "  {}  ",
  },
  "hyprland/submap": {
    "format": "{}",
    "always-on": true
  },
  "battery": {
    "interval": 10,
    "bat": "BAT0",
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format-time": "{H}:{M:02}",
    "format": "{icon} {capacity}% ({time})",
    "format-charging": "ÔÉß {capacity}% ({time})",
    "format-charging-full": "ÔÉß {capacity}%",
    "format-full": "{icon} {capacity}%",
    "format-alt": "{icon} {power}W",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ],
    "tooltip": false
  },
  "clock#time": {
    "interval": 1,
    "format": "{:%HÊôÇ%MÂàÜ%SÁßí}",
    "tooltip": false
  },
  "clock#date": {
    "interval": 20,
    "format": "{:%YÂπ¥%mÊúà%dÊó•}",
    "tooltip": false
    //"tooltip-format": "{:%e %B %Y}"
  },
  "cpu": {
    "interval": 2,
    "tooltip": false,
    "format": "Ôãõ {usage}%",
    "format-alt": "Ôãõ {load}",
